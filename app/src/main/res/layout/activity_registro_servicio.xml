<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroServicio">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:gravity="right|top"
        android:orientation="vertical"
        android:scrollbarDefaultDelayBeforeFade="200"
        android:verticalScrollbarPosition="defaultPosition">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/txt_registroServicio"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="101dp" />

                <Button
                    android:id="@+id/btnBuscarSer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="15dp"
                    android:longClickable="false"
                    android:minHeight="5dip"
                    android:text="Elegir foto" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/NombresSer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="0dp"
                    android:ems="10"
                    android:hint="@string/Nombres"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/ApellidosSer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="0dp"
                    android:ems="10"
                    android:hint="@string/Apellidos"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/DireccionSer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="0dp"
                    android:ems="10"
                    android:hint="@string/Direccion"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/TelefonoSer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="0dp"
                    android:ems="10"
                    android:hint="@string/Telefono"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/HorarioSer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="0dp"
                    android:ems="10"
                    android:hint="@string/Horario"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/DescripcionSer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="0dp"
                    android:ems="10"
                    android:hint="@string/Descripcion"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/CorreoSer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="0dp"
                    android:ems="10"
                    android:hint="@string/Correo"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/PassSer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="0dp"
                    android:ems="10"
                    android:hint="@string/ContraseÃ±a"
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/btnRegistrarSer"
                    android:layout_width="245dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/Registrar" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>